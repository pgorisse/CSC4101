{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <h2>Liste des circuits</h2>
    <br>
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>Description</th>
            <th>Ville départ</th>
            <th>Pays départ</th>
            <th>Durée</th>
            <th>Ville arrivée</th>
            <th>Date départ</th>
            <th>Prix</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for progCircuit in progCircuits %}
            <tr>
                <td>{{ progCircuit.circuit.description }}</td>
                <td>{{ progCircuit.circuit.villeDepart }}</td>
                <td>{{ progCircuit.circuit.paysDepart }}</td>
                <td>{{ progCircuit.circuit.dureeCircuit }}{{ " jours" }}</td>
                <td>{{ progCircuit.circuit.villeArrivee }}</td>
                <td>{{ progCircuit.dateDepart|date('d-m-Y') }}</td>
                <td>{{ progCircuit.prix }}{{ "€" }}</td>

                <td><a class="text-primary" href={{ path('front_circuit_show',{id:progCircuit.id}) }}>Détails</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no circuits found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% block footer %}{% endblock %}