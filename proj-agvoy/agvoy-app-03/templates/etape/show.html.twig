{% extends 'base.html.twig' %}

{% block title %}Détails de l'étape {{ etape.villeEtape }}{% endblock %}

{% block body %}
    <h1>Détails de l'étape {{ etape.villeEtape }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ etape.id }}</td>
            </tr>
            <tr>
                <th>NumeroEtape</th>
                <td>{{ etape.numeroEtape }}</td>
            </tr>
            <tr>
                <th>VilleEtape</th>
                <td>{{ etape.villeEtape }}</td>
            </tr>
            <tr>
                <th>NombreJours</th>
                <td>{{ etape.nombreJours }}</td>
            </tr>
        </tbody>
    </table>

    <p>
        <a class="btn btn-outline-primary" href="{{ path('admin_etape_index') }}"><i class="fa fa-caret-left"></i> Retour à la liste</a>
    </p>
    <p>
        <a class="btn btn-outline-warning" href="{{ path('admin_etape_edit', {'id': etape.id}) }}"><i class="fa fa-edit"></i> Modifier</a>
    </p>

    {{ include('etape/_delete_form.html.twig') }}
{% endblock %}
